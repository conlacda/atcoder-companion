{
    "manifest_version": 3,
    "name": "Useful atcoder",
    "description": "Useful extension for atcoder",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        // Common
        {
            "js": [
                "scripts/jquery_.js",
                "scripts/utils.js",
                "scripts/content.js"
            ],
            "matches": [
                "*://atcoder.jp/*"
            ]
        },
        // Add test cases to problem statement
        {
            "js": [
                "scripts/testcase/dom.js",
                "scripts/testcase/fetch-test-case.js",
                "scripts/testcase/main.js"
            ],
            "matches": [
                "*://atcoder.jp/contests/*/tasks/a*"
            ]
        },
        // Mark solved problems in task list
        {
            "js": [
                "scripts/mark-solved-problem/const.js",
                "scripts/mark-solved-problem/main.js"
            ],
            "matches": [
                "*://atcoder.jp/contests/*/tasks",
                "*://atcoder.jp/contests/*/tasks/"
            ]
        },
        // Debug with custom test
        {
            "js": [
                "scripts/debug-with-custom-test/problem-info.js",
                "scripts/debug-with-custom-test/testcase-downloader.js",
                "scripts/debug-with-custom-test/main.js"
            ],
            "matches": [
                "*://atcoder.jp/contests/*/submissions/*"
            ]
        }
    ]
}